{
  "build": {
    "beforeDevCommand": "npm run build:css && trunk serve",
    "beforeBuildCommand": "npm run build:css && trunk build",
    "devPath": "http://127.0.0.1:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "gongcheck",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true, 
        "ask": true,
        "confirm": true, 
        "message": true, 
        "open": true, 
        "save": true 
      }
    },
    "windows": [
      {
        "title": "GongCheck",
        "width": 1280,
        "height": 960
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
